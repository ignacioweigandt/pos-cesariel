# Archivo de ejemplo para variables de entorno
# Copia este archivo a .env y configura los valores apropiados

# Configuración del entorno
ENV=development
DEBUG=true

# Configuración de la base de datos
DATABASE_URL=postgresql://postgres:password@db:5432/pos_cesariel
DB_HOST=db
DB_PORT=5432
DB_NAME=pos_cesariel
DB_USER=postgres
DB_PASSWORD=password

# Configuración del servidor
HOST=0.0.0.0
PORT=8000

# Configuración de seguridad
# IMPORTANTE: Cambia esta clave secreta en producción
SECRET_KEY=tu-clave-secreta-super-segura-cambiala-en-produccion
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración de Cloudinary
# Obtén estas credenciales desde tu dashboard de Cloudinary
# https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=tu-api-key
CLOUDINARY_API_SECRET=tu-api-secret